{
  "private": true,
  "scripts": {
    "build": "pnpm run -r build --stream",
    "clean": "pnpm run -r clean --stream",
    "copy": "pnpm run -r copy --stream",
    "dev:copy": "pnpm --filter=* --parallel copy -- --watch",
    "dev:tsc": "tsc -b tsconfig.build.json --watch",
    "dev:tsup": "pnpm --filter=@vuepress/client --filter=@vuepress/shared --parallel build -- --watch",
    "docs:build": "pnpm --filter=docs docs:build",
    "docs:clean": "pnpm --filter=docs docs:clean",
    "docs:dev": "pnpm --filter=docs docs:dev",
    "docs:release": "pnpm copy && pnpm build && pnpm docs:build",
    "docs:serve": "pnpm --filter=docs docs:serve",
    "lint": "eslint --ext .js,.ts,.vue .",
    "prepare": "husky install",
    "release": "pnpm lint && pnpm clean && pnpm copy && pnpm build && pnpm test && lerna publish prerelease --dist-tag next",
    "test": "jest --runInBand"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,css,scss}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "prettier-config-vuepress",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/webpack-env": "^1.16.4",
    "cpx2": "^4.2.0",
    "eslint": "^8.13.0",
    "eslint-config-vuepress": "^3.6.0",
    "eslint-config-vuepress-typescript": "^2.6.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "prettier-config-vuepress": "^1.4.0",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.55.0",
    "ts-jest": "^27.1.4",
    "tsconfig-vuepress": "^0.1.0",
    "tsup": "^5.12.5",
    "typescript": "^4.6.3",
    "vite": "~2.9.5"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  }
}
