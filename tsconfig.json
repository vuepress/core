{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@internal/*": ["./packages/client/src/types/internal/*.d.ts"],
      "@vuepress/*": ["./packages/*/src"],
      "vuepress": ["./packages/vuepress/src"],
    },
    "types": ["cypress", "webpack-env", "vite/client"],
  },
  "include": [
    "**/.vuepress/**/*",
    "e2e/**/*",
    "packages/**/*",
    "vitest.config.ts",
  ],
  "exclude": ["node_modules", ".temp", "lib", "dist"],
}
